.login_error_pos
  = render "shared/flash_messages", :target => @user_session
%div{:class => "newlogin"}
  - form_for @user_session do |form|
    %table{:border=>0}
      %tbody
        %tr
          %td
            = image_tag('login_lock.jpg')
          %td
            %table{:style => "padding-top:40px",:class => "table-structure", :cellspacing=>"20"}
              %tr
                %td
                  %b= form.label :username, "Username"
                %td
                  = form.text_field :username, :class => 'text_feld_area_login_page'
              %tr
                %td
                  %b= form.label :password, "Password"
                %td
                  = form.password_field :password, :class => 'text_feld_area_login_page'
              %tr
                %td{:colspan => "2", :align=>"center"}
                  = form.submit "Log In", :style => 'width:80px;font-weight:bold'            